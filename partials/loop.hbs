{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}


<article class="preview col-sm-6 col-md-6 col-lg-3 col-xs-12 {{post_class}}">
  <div class="image-swapper">
    <img src="{{image}}" alt="">
  </div>
  <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
  <p class="post-excerpt">{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>

  <p class="hr visible-xx">&ndash;&ndash;&ndash;</p>

</article>


{{/foreach}}
