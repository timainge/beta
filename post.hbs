{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}


<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <h2 class="compact"><time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time></h2>
                <h2 class="compact">{{tags prefix="tags: "}}</h2>
                <p class="hr">&ndash;&ndash;&ndash;</p>
            </section>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <!-- whole post footer removed, including author, share and subscribe -->

    </article>
</main>

{{!-- REMOVED... Links to Previous/Next posts --}}


{{/post}}
